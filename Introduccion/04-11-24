#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
	// INtrucciones con decición, secuencial y ciclos (WHILE, DO, WHILE FOR)
	// el Y valida un argumento "while" mientras cumpla se seguira ejecutanco, puede ser una instrucción o un grupo de estas
 //se usa un conjunto de numeros naturales "1234567890"
	int i = 0;
		while (i <= 9)
		{
			cout << i << ", ";
			i++;
		}

		int I = 0, suma = 0;
		while (I <= 9)
		{
			cout << I << ", ";
			suma = suma + I;
			I++;

		}
		cout << endl;
		cout << "Total: " << suma << endl;


		int opcion1 = 0;
		do
		{
			cout << "Menu de opciones" << endl;
			cout << "1-. Ejecuta opción 1" << endl;
			cout << "2-. Ejecuta opción 2" << endl;     
			cout << "3-. Ejecuta opción 3" << endl;
			cout << "4-. Ejecuta opción 4" << endl;
			cout << "5-. Ejecuta opción 6" << endl;
			cout << "6-. Salir" << endl;
			cin >> opcion1;

		} while (opcion1 != 6); //Estetica y obra social
}
